// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  urlId String
  links Link[]

  @@map("users")
}

model Link {
  id Int @id @default(autoincrement())
  originalLink String
  tag String
  acessCount Int
  user User @relation(fields: [userId],references: [id])
  userId Int

  @@map("links")
}